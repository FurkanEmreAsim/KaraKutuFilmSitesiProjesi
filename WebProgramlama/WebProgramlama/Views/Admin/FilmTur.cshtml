@{
    ViewBag.Title = "FilmTur";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model List<WebProgramlama.Models.FilmTur>

<div class="panel panel-gray">
    <div class="panel-heading">
        <div class="col-md-12">
            <h4>Film Tur</h4>
            <a href="javascript:;" data-toggle="tooltip modal" data-width="4" data-source="/Admin/FilmTurEkle" data-title="Yeni Film Tur" data-function="CloseModal" class="btn btn-success btn-sm tooltips pull-right" style="margin-top:6px;" title="Yeni Oyuncu"><i class="fa fa-plus">&nbsp;&nbsp; Yeni Film Tur</i></a>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-1">Film</th>
                            <th class="col-md-1">Tur</th>
                            <th class="col-md-1"></th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Film.Ad</td>
                            <td>@item.TurTip.Ad</td>
                            <td><a href='javascript:;' data-toggle='tooltip modal' data-source="/Admin/FilmTurDuzenle?FilmTurID=@item.FilmTurID" data-title='Film Tur Düzenle' data-function='CloseModal' data-width='4' class='btn btn-xs btn-info tooltips' title='Düzenle'>Düzenle</a></td>
                            <td><a href="/Admin/FilmTurSil?FilmTurID=@item.FilmTurID" class='btn btn-xs btn-danger tooltips' title='Sil'>Sil</a></td>
                        </tr>
                    }
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>




