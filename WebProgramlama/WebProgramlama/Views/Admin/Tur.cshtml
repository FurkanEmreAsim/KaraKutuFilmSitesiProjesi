@{
    ViewBag.Title = "Tür Tip";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model List<WebProgramlama.Models.TurTip>

<div class="panel panel-gray">
    <div class="panel-heading">
        <div class="col-md-12">
            <h4>Tür Tip</h4>
            <a href="javascript:;" data-toggle="tooltip modal" data-width="4" data-source="/Admin/TurEkle" data-title="Yeni Tür" data-function="CloseModal" class="btn btn-success btn-sm tooltips pull-right" style="margin-top:6px;" title="Yeni Tür"><i class="fa fa-plus">&nbsp;&nbsp; Yeni Tür</i></a>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-10">Tür Tipi</th>
                            <th class="col-md-1"></th>
                            <th class="col-md-1"></th>
                          </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ad</td>
                            <td><a href='javascript:;' data-toggle='tooltip modal' data-source="/Admin/TurDuzenle?TurTipID=@item.TurTipID" data-title='Tür Tipi Düzenle' data-function='CloseModal' data-width='4' class='btn btn-xs btn-info tooltips' title='Düzenle'>Düzenle</a></td>
                            <td><a href="/Admin/TurSil?TurTipID=@item.TurTipID" class='btn btn-xs btn-danger tooltips' title='Sil'>Sil</a></td>
                        </tr>
                    }
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>


