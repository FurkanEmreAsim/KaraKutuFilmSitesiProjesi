@{
    ViewBag.Title = "Üyelik Ekle";
    Layout = null;
}


<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model WebProgramlama.Models.Uyelik

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("UyelikEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Ad</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Soyad</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Şifre</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Role</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Aktivasyon</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Aktivasyon, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Onay</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Onay, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Kayit Tarihi</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.KayitTarihi, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#KayitTarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#KayitTarihi").datepicker('setDate', new Date());
    });
</script>





