@{
    ViewBag.Title = @WebProgramlama.Resources.lang.AnaSayfa;
}
@model WebProgramlama.Controllers.AnaSayfaDTO

<section id="actors">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="section-title"></h1>
                <div id="owl-actors" class="owl-carousel owl-theme">

                    @foreach (var item in Model.film)
                    {
                        <div class="item">
                            <div class="col-md-12 wp6">
                                <div class="actor">
                                    <div class="avatar">
                                        @if (item.Fotograf == null)
                                        {
                                            <img style='width:100%; height:100%;' src="~/assets/img/resimyok.png" alt="" />
                                        }
                                        else
                                        {
                                            <img src="data:image/png;base64,@System.Convert.ToBase64String(item.Fotograf)" style="height:100%; " alt="Slide 1" />
                                        }
                                    </div>

                                    <div class="details">
                                        <ul class="social">
                                            <li>
                                                <a href="@Url.Action("About", "Home", new {  id = item.FilmID }, Request.Url.Scheme)">
                                                    <i class="fa fa-star"></i>
                                                </a>
                                            </li>
                                            <li><a href="http://twitter.com/#"><i class="fa fa-facebook"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="actor-info">
                                        <h4 class="heading">@item.Ad</h4>
                                     
                                    </div> <!-- /.actor-info -->
                                </div><!-- /.actor -->
                            </div>
                        </div><!-- /.item -->
                    }
                </div>
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>