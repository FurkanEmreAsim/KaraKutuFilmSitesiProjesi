@model WebProgramlama.Models.RegisterViewModel

@{
    ViewBag.Title = @WebProgramlama.Resources.lang.UyeGiris;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="actors">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
                    &nbsp;
                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <hr />
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label(@WebProgramlama.Resources.lang.Eposta, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label(@WebProgramlama.Resources.lang.Sifre, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="submit_field">
                                <strong style="color:red; float:left; width:50%;">@TempData["Mesaj"]</strong>
                                <input class="mainBtn pull-right" type="submit" value="Giriş">
                            </div>
                        </div>

                        <p>
                            @Html.ActionLink(@WebProgramlama.Resources.lang.YeniKayit, "Register", "Home")
                        </p>

                    }
                </section>
            </div>

        </div>
    </div>
</section>

<section id="actors">
    <div class="container">
        <div class="row">
            <div class="container">
                <div id="owl-actors" class="owl-carousel owl-theme">
                    &nbsp;
                    <hr />
                    <br />
                </div>
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->

    </div><!-- /.container -->

</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
