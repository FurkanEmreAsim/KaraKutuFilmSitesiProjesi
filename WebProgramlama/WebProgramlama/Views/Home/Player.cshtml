@{
    ViewBag.Title =@WebProgramlama.Resources.lang.Oyuncu;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebProgramlama.Controllers.AnaSayfaDTO
<section id="actors">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="section-title">Actors</h1>
                <div id="owl-actors" class="owl-carousel owl-theme">

                    @foreach (var item in Model.oyuncuFilm)
                    {
                        <div class="item">
                            <div class="col-md-12 wp6">
                                <div class="actor">
                                    <div class="avatar">
                                        @if (item.Oyuncu.Fotograf == null)
                                        {
                                            <img style='width:100%; height:400%;' src="~/assets/img/resimyok.png" alt="" />
                                        }
                                        else
                                        {
                                            <img src="data:image/png;base64,@System.Convert.ToBase64String(item.Oyuncu.Fotograf)" style="height:400%; " alt="Slide 1" />
                                        }
                                    </div>

                                    <div class="details">
                                        <ul class="social">
                                            <li><a href=@item.Oyuncu.Facebook><i class="fa fa-facebook"></i></a></li>
                                            <li><a href=@item.Oyuncu.Twitter><i class="fa fa-twitter"></i></a></li>
                                        </ul>
                                    </div>
                                </div><!-- /.actor -->

                                <div class="actor-info">
                                    <h4 class="heading">@item.Oyuncu.Ad  @item.Oyuncu.Soyad</h4>
                                    <h5 class="sub-heading">@item.Oyuncu.Uyruk.Ad</h5>
                                    <h5 class="sub-heading">@WebProgramlama.Resources.lang.DogumTarihi :@String.Format("{0:d}", @item.Oyuncu.DogumTarihi)</h5>
                                    @if (DateTime.Now > @item.Oyuncu.OlumTarihi)
                                    {
                                        <h5 class="sub-heading">@WebProgramlama.Resources.lang.OlumTarihi : @String.Format("{0:d}", @item.Oyuncu.OlumTarihi)</h5>
                                    }
                                    <h5 class="sub-heading">@item.Oyuncu.Biyografi</h5>
                                </div> <!-- /.actor-info -->
                            </div>
                        </div><!-- /.item -->
                    }
                </div>
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>