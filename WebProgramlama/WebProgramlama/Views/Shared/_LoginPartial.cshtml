@using Microsoft.AspNet.Identity

@if (HttpContext.Current.Session["eposta"] != null)
{
    <li><a>Hoş Geldiniz , <strong>@WebProgramlama.Controllers.HomeController.UyeBilgiGetir(HttpContext.Current.Session["eposta"].ToString())</strong></a></li>
    <li>@Html.ActionLink("Çıkış", "Cikis", "Home")</li>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(@WebProgramlama.Resources.lang.UyeOl, "Register", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(@WebProgramlama.Resources.lang.UyeGiris, "Login", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}


@if (HttpContext.Current.Session["Culture"].ToString() == "tr")
{
    <li>@Html.ActionLink("English", "ChangeCulture", "Home", new { lang = "en", returnurl = this.Request.RawUrl }, null)</li>
}
else
{
    <li>@Html.ActionLink("Türkçe", "ChangeCulture", "Home", new { lang = "tr", returnUrl = this.Request.RawUrl }, null)</li>
}
